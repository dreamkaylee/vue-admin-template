{
  "name": "vue-admin-template",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "dev": "vite",
    "build:pre": "vue-tsc --noEmit && vite build --mode staging",
    "build:prod": "vue-tsc --noEmit && vite build --mode production",
    "preview": "vite preview --port 4173",
    "lint": "eslint \"src/**/*.{js,jsx,vue,ts,tsx}\" --fix",
    "lint:css": "stylelint **/*.{vue,css,scss,less} --fix --custom-syntax postcss-html",
    "prettier-format": "prettier --config prettier.config.cjs \"src/**/*.{js,jsx,vue,ts,tsx}\" --write",
    "prepare": "husky install",
    "clean": "rimraf node_modules && rimraf package-lock.json"
  },
  "dependencies": {
    "pinia": "^2.0.27",
    "pinia-plugin-persist": "^1.0.0",
    "vue": "^3.2.45",
    "vue-router": "^4.1.6"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.3.0",
    "@commitlint/config-conventional": "^17.3.0",
    "@rushstack/eslint-patch": "^1.2.0",
    "@types/node": "^18.11.10",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "@vitejs/plugin-vue": "^3.2.0",
    "@vue/eslint-config-prettier": "^7.0.0",
    "@vue/eslint-config-typescript": "^11.0.2",
    "@vue/tsconfig": "^0.1.3",
    "commitizen": "^4.2.5",
    "cz-conventional-changelog-zh": "^0.0.2",
    "eslint": "^8.29.0",
    "eslint-import-resolver-alias": "^1.1.2",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-vue": "^9.8.0",
    "husky": "^8.0.2",
    "lint-staged": "^13.1.0",
    "npm-run-all": "^4.1.5",
    "postcss-html": "^1.5.0",
    "prettier": "^2.8.0",
    "rimraf": "^3.0.2",
    "stylelint": "^14.16.0",
    "stylelint-config-prettier": "^9.0.4",
    "stylelint-config-standard-vue": "^1.0.0",
    "typescript": "~4.9.3",
    "vite": "^3.2.4",
    "vite-plugin-eslint": "^1.8.1",
    "vite-plugin-stylelint": "^3.3.2",
    "vue-tsc": "^1.0.11"
  },
  "lint-staged": {
    "*.{js,jsx,vue,ts,tsx}": [
      "npm run lint",
      "npm run prettier-format"
    ],
    "*.{vue,css,scss,less}": [
      "npm run lint:css"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog-zh"
    }
  }
}
