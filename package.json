{
  "name": "vue-admin-template",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "dev": "vite",
    "build:pre": "vue-tsc --noEmit -p tsconfig.app.json --composite false && vite build --mode staging",
    "build:prod": "vue-tsc --noEmit -p tsconfig.app.json --composite false && vite build --mode production",
    "preview": "vite preview --port 4173",
    "lint": "eslint \"src/**/*.{js,jsx,vue,ts,tsx}\" --fix",
    "prettier-format": "prettier --config prettier.config.cjs \"src/**/*.{js,jsx,vue,ts,tsx}\" --write",
    "prepare": "husky install",
    "clean": "rimraf node_modules && rimraf package-lock.json"
  },
  "dependencies": {
    "pinia": "^2.0.36",
    "pinia-plugin-persistedstate": "^3.1.0",
    "vue": "^3.3.2",
    "vue-router": "^4.2.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.6.3",
    "@commitlint/config-conventional": "^17.6.3",
    "@rushstack/eslint-patch": "^1.2.0",
    "@tsconfig/node18": "^2.0.1",
    "@types/node": "^18.16.8",
    "@vitejs/plugin-vue": "^4.2.3",
    "@vue/eslint-config-prettier": "^7.1.0",
    "@vue/eslint-config-typescript": "^11.0.3",
    "@vue/tsconfig": "^0.4.0",
    "commitizen": "^4.3.0",
    "cz-conventional-changelog-zh": "^0.0.2",
    "eslint": "^8.39.0",
    "eslint-import-resolver-alias": "^1.1.2",
    "eslint-import-resolver-typescript": "^3.5.5",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-vue": "^9.11.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.2",
    "npm-run-all": "^4.1.5",
    "postcss-html": "^1.5.0",
    "prettier": "^2.8.8",
    "typescript": "~5.0.4",
    "vite": "^4.3.5",
    "vue-tsc": "^1.6.4"
  },
  "lint-staged": {
    "*.{js,jsx,vue,ts,tsx}": [
      "npm run lint",
      "npm run prettier-format"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog-zh"
    }
  }
}
